function fix_rosbag(){
  echo "Reindexing bag: $1..."
  rosbag reindex "$1"
  echo "Fixing bag..."
  rosbag fix "$1" $(echo "$1"| cut -d'.' -f 1)".bag"
  echo "Removing currupt bag files..."
  rm "$1"
  rm $(echo "$1"| cut -d'.' -f 1)".bag.orig.active"
}

